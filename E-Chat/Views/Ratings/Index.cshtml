@model IEnumerable<E_Chat.Models.Rating>

@{
	ViewData["Title"] = "Index";
}
@{
	int sum = 0, count = 0, avg = 0;
	foreach (var item in Model)
	{
		sum = sum + item.Score;
		count++;
	}

	if (count > 0)
	{
		avg = sum / count;

		<div class="rating-page">
		<span class="rating-page-title">
			CUSTOMER REVIEWS
		</span>
		<table class="avg">
			<thead>
				<tr>
					<th>
						AVERAGE RATE: @avg
					</th>
				</tr>
			</thead>
		</table>
		</div>
	}
	else
	{
		<div class="rating-page">

		<h1>CUSTOMER REVIEWS </h1>
		<table>
			<thead>
				<tr>
					<th>
						AVERAGE RATE: 0
					</th>
				</tr>
			</thead>
		</table>
		</div>
	}
}
<div class="rating-page">
	<p>
	<a asp-action="Create">Create New</a>
</p>
<form asp-controller="Ratings" asp-action="Index" method="get">
	<p>
		Name: <input type="text" name="SearchString" />
		<input type="submit" value="Search" />
	</p>
</form>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Score)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Feedback)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Time)

				@Html.DisplayNameFor(model => model.Date)

			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Score)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Feedback)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Time)

					@Html.DisplayFor(modelItem => item.Date)

				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Name">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.Name">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.Name">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
</div>
